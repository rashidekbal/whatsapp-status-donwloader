<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_350"
    android:layout_height="match_parent"
    android:gravity="center">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="none"
      android:layout_marginBottom="@dimen/dp_80">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/import_steps"
              android:textStyle="bold"
              android:textSize="@dimen/sp_26"
              android:textAlignment="center"
              android:textColor="@color/black"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 1:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step1"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 2:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step2"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 3:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step3"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 4:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step4"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 5:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step5"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 6:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step6"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 7:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step7"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 8:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step8"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Step 9:"
              android:textStyle="bold"
              android:textColor="@color/black"/>
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_250"
              android:src="@drawable/step9"/>
      </LinearLayout>
  </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/white"

        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/getPermissionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/i_understood"
            android:background="@drawable/green_how_to_use_btn_background"
            android:paddingVertical="@dimen/dp_10"
            android:textAllCaps="false"
            android:textColor="@color/dark_green"
            android:paddingHorizontal="@dimen/dp_50"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>